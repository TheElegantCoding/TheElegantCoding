{
  "default": true,
  "single-trailing-newline": false,
  "first-header-h1": true,
  "header-style": 
  { 
    "style": "consistent" 
  },
  "ul-style": 
  { 
    "style": "asterisk" 
  },
  "list-indent": true,
  "ul-start-left": true,
  "ul-indent": 
  { 
    "indent": 2,
    "start_indent": 2,
    "start_indented": false 
  },
  "no-trailing-spaces": false,
  "no-hard-tabs": true,
  "no-reversed-links": true,
  "no-multiple-blanks": 
  { 
    "maximum": 1 
  },
  "line-length": 
  {
    "code_block_line_length": 80,
    "code_blocks": true,
    "headers": true,
    "heading_line_length": 80,
    "headings": true,
    "line_length": 80,
    "stern": false,
    "strict": false,
    "tables": true
  },
  "commands-show-output": true,
  "no-missing-space-atx": true,
  "no-multiple-space-atx": true,
  "no-missing-space-closed-atx": true,
  "no-multiple-space-closed-atx": true,
  "blanks-around-headers": 
  {
    "lines_above": 1,
    "lines_below": 1
  },
  "header-start-left": true,
  "no-duplicate-header": 
  {
    "allow_different_nesting": false,
    "siblings_only": false
  },
  "single-h1": 
  {
    "front_matter_title": "^\\s*title\\s*[:=]",
    "level": 1
  },
  "no-trailing-punctuation": 
  {
    "punctuation": ".,;:!。，；：！"
  },
  "no-multiple-space-blockquote": true,
  "no-blanks-blockquote": true,
  "ol-prefix": 
  {
    "style": "one_or_ordered"
  },
  "list-marker-space": 
  {
    "ol_multi": 1,
    "ol_single": 1,
    "ul_multi": 1,
    "ul_single": 1
  },
  "blanks-around-fences": 
  {
    "list_items": true
  },
  "blanks-around-lists": false,
  "no-inline-html": false,
  "no-bare-urls": true,
  "hr-style": 
  {
    "style": "consistent"
  },
  "no-emphasis-as-header": 
  {
    "punctuation": ".,;:!?。，；：！？"
  },
  "no-space-in-emphasis": true,
  "no-space-in-code": true,
  "no-space-in-links": true,
  "fenced-code-language": 
  {
    "allowed_languages": [],
    "language_only": true
  },
  "first-line-h1": false,
  "no-empty-links": true,
  "required-headers": false,
  "proper-names": 
  {
    "code_blocks": true,
    "html_elements": true,
    "names": []
  },
  "no-alt-text": true,
  "code-block-style": 
  {
    "style": "fenced"
  },
  "code-fence-style": 
  {
    "style": "backtick"
  },
  "emphasis-style": 
  {
    "style": "asterisk"
  },
  "strong-style": 
  {
    "style": "asterisk"
  },
  "link-fragments": true,
  "reference-links-images": true,
  "link-image-reference-definitions": 
  {
    "ignored_definitions": [
      "//"
    ]
  }
}